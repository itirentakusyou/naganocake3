<%= form_with model: [:admin,item] do |f| %><br>
<%= f.file_field :itm_image_url %><br>
<%= f.text_field :name %><br>
<%= f.text_area :text %><br>
<%= f.text_field :price %><br>
<%= f.select :is_sales_status, [["販売中","false"], ["販売不可","true"]], include_blank: "--選択してください--" %><br>
<%= f.collection_select :genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--" %><br>
<%= f.submit class: "col-xs-2 pull-right btn-lg btn-success "  %>
<% end %>
