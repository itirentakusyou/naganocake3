<h1>新規　更新　共有デバイス</h1>

<!--新規投稿・editページの共有-->

<%= form_with model: @item do |f| %>
   <h4>画像</h4>
     <%= f.file_field :itm_imag_url %>
    <h4>商品名</h4>
      <%= f.text_field :name %>
    <h4>詳細文</h4>
      <%= f.text_area :text %>
    <h4>税込価格</h4>
    <%= f.text_field :price %>
    <h4>販売状況</h4>
    <%= f.select :is_sales_status, [["販売中","false"], ["販売不可","true"]], include_blank: "--選択してください--" %>
    <h4>販売ジャンル</h4>
     <!--%= f.collection_select :genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--" %-->

    <%= f.submit  %>
  <% end %>