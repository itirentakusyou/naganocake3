<div class="container mt-5 mb-5">
<div class="row my-3">
<h1>商品新規登録</h1>
</div>
<!--投稿失敗時のメッセージ-->
<% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラーが発生しました
  <ul>
    <% @item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!--共有テンプレート-->
<%= render 'input', item: @item %>
<!--前のページに戻る-->
<div>
<%= link_to admin_items_path do %>
 <button>戻る</button>

<% end %>
</div>
</div>